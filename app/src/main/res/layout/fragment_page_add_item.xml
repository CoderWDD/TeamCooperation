<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="addItemHandler"
            type="com.example.cooperation.model.ItemAdd" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FragmentPageAddItem"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="5dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_name"
                        android:fontFamily="@font/no236"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:fontFamily="@font/no236"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:text="@={addItemHandler.itemName}"
                        android:textColor="@color/orange_brown_item"
                        android:textSize="25sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/belong_to_project"
                        android:fontFamily="@font/no236"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                    <TextView
                        android:id="@+id/recyclerview_todo_item_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{addItemHandler.projectName}"
                        android:fontFamily="@font/no236"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:fontFamily="@font/no236"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                    <TextView
                        android:id="@+id/recyclerview_todo_item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{addItemHandler.status}"
                        android:fontFamily="@font/no236"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/executor"
                        android:fontFamily="@font/no236"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                    <TextView
                        android:id="@+id/recyclerview_todo_item_executor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{addItemHandler.executor}"
                        android:fontFamily="@font/no236"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/creator"
                        android:fontFamily="@font/no236"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                    <TextView
                        android:id="@+id/recyclerview_todo_item_creator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{addItemHandler.author}"
                        android:fontFamily="@font/no236"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_time"
                        android:fontFamily="@font/no236"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                    <TextView
                        android:id="@+id/recyclerview_todo_item_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{addItemHandler.itemTime.toString()}"
                        android:fontFamily="@font/no236"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:fontFamily="@font/no236"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/orange_brown_item"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:fontFamily="@font/no236"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:text="@={addItemHandler.description}"
                        android:textColor="@color/orange_brown_item"
                        android:textSize="25sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/no236"
                    android:stateListAnimator="@null"
                    android:text="@string/project_detail_add_item_to_project"
                    android:textColor="@color/orange_brown"
                    android:textSize="25sp"
                    app:backgroundTint="@color/button_login_background_3C"
                    app:cornerRadius="10dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>
</layout>