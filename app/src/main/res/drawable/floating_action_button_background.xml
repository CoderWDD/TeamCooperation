<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval">
            <padding
                android:right="20dp"
                android:left="20dp"
                android:top="20dp"
                android:bottom="20dp"/>
            <gradient android:angle="45"
                android:endColor="@color/orange_brown"
                android:startColor="@color/purple_200"
                />
        </shape>
    </item>

    <item>
        <bitmap android:src="@drawable/icon_plus"/>
    </item>

</layer-list>